<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#008080"
    android:orientation="vertical"
    tools:context=".ClothesView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.87">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttondeleteclothes2"
                android:layout_width="36dp"
                android:layout_height="32dp"
                android:layout_marginStart="240dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/delete2_a"
                android:onClick="onClickDeletePage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.447"
                app:layout_constraintStart_toEndOf="@+id/button_back"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/button2"
                android:layout_width="35dp"
                android:layout_height="36dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/home_a"
                android:onClick="onClickHome"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.538"
                app:layout_constraintStart_toEndOf="@+id/buttondeleteclothes2"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/button_back"
                android:layout_width="34dp"
                android:layout_height="32dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/btnback_ashfaq"
                android:contentDescription=""
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.466" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="83dp"
                android:layout_height="33dp"
                android:layout_marginTop="8dp"
                android:text="MY ADDS"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/buttondeleteclothes2"
                app:layout_constraintHorizontal_bias="0.609"
                app:layout_constraintStart_toEndOf="@+id/button_back"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.87"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/stocks_view_col_id"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:shadowColor="@color/colorAccent"

            android:text="ID"
            android:textColor="@color/colorText"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/sales_view_col_clothtype"
            android:layout_width="18dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:text="Cloth Type"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorHeader"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/stocks_view_col_size"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:text="Size"
            android:textColor="@color/colorText"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/stocks_view_col_colour"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:text="Colour"
            android:textColor="@color/colorText"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/stocks_view_col_price"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:text="Price"
            android:textColor="@color/colorText"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/stocks_view_col_image"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:text="Image"
            android:textColor="@color/colorText"
            android:textSize="18sp" />
    </LinearLayout>


    <ListView
        android:id="@+id/clothes_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.13"
        android:background="@drawable/bavk"
        android:cacheColorHint="@color/colorHeader"
        android:divider="@color/colorHeader" />

    /*


    */


</LinearLayout>