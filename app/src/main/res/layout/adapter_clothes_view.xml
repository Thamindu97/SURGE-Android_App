<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <TextView
        android:id="@+id/adapter_clothes_view_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:text=""
        android:textColor="@color/colorText"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/adapter_clothes_view_clothtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:text=""
        android:textColor="@color/colorText"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/adapter_clothes_view_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:text=""
        android:textColor="@color/colorText"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/adapter_clothes_view_colour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:text=""
        android:textColor="@color/colorText"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/adapter_clothes_view_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:text=""
        android:textColor="@color/colorText"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/adapter_clothes_view_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:text=""
        android:textSize="18sp" /> />

</LinearLayout>