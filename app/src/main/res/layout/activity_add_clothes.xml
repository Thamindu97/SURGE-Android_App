<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bavk"
    tools:context=".AddClothes">


    <Button
        android:id="@+id/button4"
        android:layout_width="38dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="358dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/home_a"
        android:onClick="onClickHome"
        tools:layout_editor_absoluteX="366dp"
        tools:layout_editor_absoluteY="5dp" />

    <Button
        android:id="@+id/buttonSignUp"
        android:layout_width="103dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="154dp"
        android:layout_marginTop="531dp"
        android:layout_marginEnd="154dp"
        android:alpha="0.9"

        android:background="@drawable/borders_ashfaq"
        android:text="Add For Sale"
        android:textColor="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="356dp"
        android:background="@drawable/list1_a"
        android:onClick="onClickList" />

    <Button
        android:id="@+id/pick_image"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="159dp"
        android:layout_marginTop="187dp"
        android:layout_marginEnd="162dp"
        android:background="@drawable/borders_ashfaq"
        android:onClick="onClickPickImage"
        android:text="Pick Image" />

    <EditText
        android:id="@+id/txtClothtype"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="193dp"
        android:layout_marginTop="281dp"
        android:layout_marginEnd="36dp"
        android:alpha="0.7"
        android:background="@drawable/borders2_a"
        android:ems="10"
        android:hint="ex:T-Shirt"
        android:inputType="textPersonName" />


    <EditText
        android:id="@+id/txtColour"
        android:layout_width="169dp"
        android:layout_height="43dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="397dp"
        android:layout_marginEnd="51dp"
        android:alpha="0.7"
        android:background="@drawable/borders2_a"
        android:ems="10"
        android:hint="ex:Blue"
        android:inputType="textPersonName"
        android:visibility="visible"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/txtPrice"
        android:layout_width="171dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="191dp"
        android:layout_marginTop="457dp"
        android:layout_marginEnd="49dp"
        android:alpha="0.7"
        android:background="@drawable/borders2_a"
        android:ems="10"
        android:hint="ex:100"
        android:inputType="phone" />

    <EditText
        android:id="@+id/txtSize"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="192dp"
        android:layout_marginTop="343dp"
        android:layout_marginEnd="36dp"
        android:alpha="0.7"
        android:background="@drawable/borders2_a"
        android:ems="10"
        android:hint="ex:L"
        android:inputType="textPersonName" />

    <ImageView
        android:id="@+id/imageViewCloth"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="154dp"
        android:background="@drawable/tshirt1_a" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="111dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="283dp"
        android:layout_marginEnd="256dp"
        android:alpha="0.8"
        android:background="@drawable/borders_ashfaq"
        android:gravity="center"
        android:text="Cloth Type :"
        android:textColor="@color/colorText"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="111dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="399dp"
        android:layout_marginEnd="257dp"
        android:alpha="0.8"
        android:background="@drawable/borders_ashfaq"
        android:gravity="center"
        android:text="Colour :"
        android:textColor="@color/colorText"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="104dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="462dp"
        android:layout_marginEnd="262dp"
        android:alpha="0.8"
        android:background="@drawable/borders_ashfaq"
        android:gravity="center"
        android:inputType="number"
        android:text="Price :"
        android:inputType="number"
        android:textColor="@color/colorText"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="339dp"
        android:layout_marginEnd="259dp"
        android:alpha="0.8"
        android:background="@drawable/borders_ashfaq"
        android:gravity="center"
        android:text="Size :"
        android:textColor="@color/colorText"
        android:textSize="20sp" />

</RelativeLayout>