<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.13"
        android:background="@color/colorPrimaryDark">

        <Button
            android:id="@+id/button_clothes_update_update"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="180dp"
            android:layout_marginTop="533dp"
            android:layout_marginEnd="175dp"
            android:background="@drawable/update_a"
            android:enabled="false"
            android:fontFamily="monospace"
            android:onClick="onClickUpdate"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edit_clothes_update_id"
            android:layout_width="197dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="162dp"
            android:layout_marginTop="145dp"
            android:layout_marginEnd="52dp"
            android:alpha="0.5"
            android:background="@drawable/borders2_a"
            android:ems="10"
            android:inputType="number"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_clothes_update_price"
            android:layout_width="198dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="163dp"
            android:layout_marginTop="462dp"
            android:layout_marginEnd="50dp"
            android:alpha="0.5"
            android:background="@drawable/borders2_a"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/edit_clothes_update_colour"
            android:layout_width="195dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="163dp"
            android:layout_marginTop="378dp"
            android:layout_marginEnd="53dp"
            android:alpha="0.5"
            android:background="@drawable/borders2_a"
            android:ems="10"
            android:inputType="text" />

        <EditText
            android:id="@+id/edit_clothes_update_size"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="162dp"
            android:layout_marginTop="295dp"
            android:layout_marginEnd="51dp"
            android:alpha="0.5"
            android:background="@drawable/borders2_a"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edit_clothes_update_clothtype"
            android:layout_width="195dp"
            android:layout_height="39dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="161dp"
            android:layout_marginTop="217dp"
            android:layout_marginEnd="55dp"
            android:alpha="0.5"
            android:background="@drawable/borders2_a"
            android:ems="10"
            android:inputType="textPersonName" />

        <ImageView
            android:id="@+id/button_back"
            android:layout_width="40dp"
            android:layout_height="39dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/btnback_ashfaq"
            android:contentDescription="@string/back" />

        <TextView
            android:id="@+id/text_clothes_update_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="72dp"
            android:layout_marginTop="148dp"
            android:layout_marginEnd="317dp"
            android:text="@string/Update"
            android:textColor="@color/colorAccent"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/text_clothes_update_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="65dp"
            android:layout_marginTop="466dp"
            android:layout_marginEnd="292dp"
            android:text="@string/Update5"
            android:textColor="@color/colorAccent"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/text_clothes_update_reorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="382dp"
            android:layout_marginEnd="291dp"
            android:text="@string/Update4"
            android:textColor="@color/colorAccent"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/text_clothes_update_supplier"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="54dp"
            android:layout_marginTop="303dp"
            android:layout_marginEnd="291dp"
            android:text="@string/Update3"
            android:textColor="@color/colorAccent"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/text_clothes_update_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="218dp"
            android:layout_marginEnd="273dp"
            android:shadowColor="@color/colorPrimaryDark"
            android:text="@string/Update2"
            android:textColor="@color/colorAccent"
            android:textSize="24sp" />

    </RelativeLayout>

</LinearLayout>