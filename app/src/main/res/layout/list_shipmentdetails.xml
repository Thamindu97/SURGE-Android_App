<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/shipmentdetails_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Id"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/shipmentdetails_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shipmentdetails_id"
        android:text="Name"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/shipmentdetails_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shipmentdetails_name"
        android:text="Phone"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/shipmentdetails_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shipmentdetails_phone"
        android:text="Email"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/shipmentdetails_street"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shipmentdetails_email"
        android:text="Street"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/shipmentdetails_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shipmentdetails_street"
        android:text="City"
        android:textSize="18sp" />

</RelativeLayout>